   <%= form_tag(controller:"products",action:"index") do %>
     <%= text_field_tag :search %>
     <%= submit_tag 'Search',:name => nil %>
   <% end %>


    <div class="container" id="product">
      <div class="row">
       <% @search.each do |product| %>
          <div class="col-lg-4 col-md-6 col-xs-12">
            <ul><br>
              <li>
              <div class="card1">
                <div class="card-header1">
                  <a href="/products/<%= product.id %>">  <%= image_tag product.image.to_s, :width => "100%" %></a>
                </div>
                <!-- click-show-detail -->
                <div class="prduct-detail" id="product-detail">
                  <p href="/products/<%= product.id %>">  <%= image_tag product.image.to_s, :width => "100%" %></p>
                </div>
                <div class="product-detail-mini">
                      <p><strong><%= product.name %></strong>¥<%= product.price %>（税抜き）</p>
                      <p><%= product.genre %></p>
                      <p><%= product.explanation %></p>
                    </div>
                </div>
              <!-- product-detail -->
                <div class="card-body1">
                  <div class="product-genre">
                      <strong></strong>
                      <%= product.genre %>
                  </div>
                  <div class="product-name">
                      <strong></strong>
                      <%= product.name %>
                  </div>
                  <div class="product-price">
                      1個：￥<strong><%= product.price %></strong>（税抜）
                  </div>
                    <% if user_signed_in? %>
                      <tr>
                        <td><%= link_to 'Show', product %></td>
                        <td><%= link_to 'Edit', edit_product_path(product) %></td>
                        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                </div>
              </div>
            </li>
           </ul>
           <% end %><br><br>
          </div>
        </div>






